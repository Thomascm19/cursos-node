{{>header}}
<div class="container p-4">

    <h1 class="text-center">Registrate en un curso</h1>
    <hr>
        <form action="">
            <div class="form-group">
                <label for="Nombre">Nombre Completo</label>
                <input type="text" class="form-control" id="nombre" placeholder="Ingresa tu nombre">
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Ingresa el id del curso">
            </div>

            <div class="form-group">
                <label for="Descripcion">Telefono</label>
                <input type="text" class="form-control" id="telefono"
                    placeholder="Ingresa la Descripcion y el Valor del curso">
            </div>
            <div class="form-group">
                    <label for="Descripcion">Cedula</label>
                    <input type="number" class="form-control" id="cedula"
                        placeholder="Ingresa la cedula">
                </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>

    </div>

</body>

</html>